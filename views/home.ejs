<link rel="stylesheet" href="/css/home.css">

<section id = "feed-posts">
    <h2 id = "main-heading">
        <%= title %>
    </h2>
    <%if(locals.user){%>
        <form action="/posts/create" id = "post-form" method="POST">
            <textarea name="content"  cols="30" rows="3" placeholder="Type Here..."></textarea>
            <br>
            <input id = "post-submit" type="submit" value="Post" id = "post-submit">
        </form>
    <%}%>


    <div id = "posts-list-container">
        <h4>Posts</h4>
        <ul>
            <%for(post of posts){%>
                <li class = "onePost">
                    <div class = "post-content">
                        <p class = "post-text">
                            <%= post.content%>
                        </p>
                        <div class = "post-options">
                            <small class = "post-name">
                                <%= post.user.name%>
                            </small class = "post-delete">
                            <%if(locals.user && locals.user.id == post.user.id){%>
                                <small class = "delete-post">
                                    <a href="/posts/destroy/<%= post.id%>">Delete</a>
                                </small>
                            <%}%>
                        </div>
                    </div>

            <div class = "post_comments">
                <% if(locals.user){%>
                    <form action="/comment/create" method="POST" class = "comment-form">
                        <textarea cols="20" rows="3" type="text" name = "content" placeholder="Type Here"></textarea>
                        <input type="hidden" name="post" value = "<%=post._id%>">
                        <br>
                        <button class = "commentBtn" type="submit">Comment</button>
                    </form>
                <%} %>

                <div class = "post-comments_list">
                    <%if(post.comments.length > 0){%>
                        <h5>Comments</h5>
                        <%}%>
                    <ul id = "post-comments-<%= post._id%>">
                        <%for(comment of post.comments){%>
                            <li class = 'post-content'>
                                <div class ="post-text">
                                    <p>
                                        <%= comment.content%>
                                    </p>
                                </div>
                                <div class = "comment-options">
                                    <small class = "comment-user-name">
                                        <%= comment.user.name %>
                                    </small>
                                    <small class = "delete-comment">
                                        <a href="#>">Delete</a>
                                    </small>
                                </div>
                            </li>
                        <%}%>
                    </ul>
                </div>
            </div>
                

            </li>
        <%}%>
    </ul>
    </div>
</section>